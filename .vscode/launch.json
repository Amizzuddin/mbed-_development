{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "[OpenOCD] Debug",
            "showDevDebugOutput": "both",
            "cwd": "${fileWorkspaceFolder}",
            "executable": "./BUILD/FLASH/${input:selectedTarget}.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "preLaunchTask": "Build",
            "device": "${input:selectedDevice}",
            "configFiles": [
                "openocd.cfg"
            ],
            "runToEntryPoint": "main",
        },
