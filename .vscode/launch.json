        //     "runToEntryPoint": "main",
        // }
    ],
    "inputs": [
        {
            "id": "selectedTarget",
            "type": "command",
            "command": "extension.commandvariable.remember",
            "args": {"key": "target"},
        },
        {
            "id": "selectedDevice",
            "type": "command",
            "command": "extension.commandvariable.remember",
            "args": {"key": "device"},
        },
    ]
}