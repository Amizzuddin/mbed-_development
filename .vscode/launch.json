        //     "device": "STM32F405",
        //     "configFiles": [
        //         "openocd.cfg"
        //     ],
        //     "runToEntryPoint": "main"
        // },
    ],
    "inputs": [
        {
            "id": "selectedTarget",
            "type": "command",
            "command": "extension.commandvariable.remember",
            "args": 
            {
                "key": "target",
            }
        },
        {
            "id": "selectedDevice",
            "type": "command",
            "command": "extension.commandvariable.remember",
            "args": 
            {
                "key": "device",
            }
        },
        {
            "id": "selectedOCD",
            "type": "command",
            "command": "extension.commandvariable.remember",
            "args": 
            {
                "key": "ocd_command",
            }
        },
        {
            "id": "selectedConfigFile",
            "type": "command",
            "command": "extension.commandvariable.remember",
            "args": 
            {
                "key": "ocd_config_file",
            }
        }
    ]
}