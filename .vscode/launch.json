{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "showDevDebugOutput": "both",
            "cwd": "${fileWorkspaceFolder}",
            "executable": "./BUILD/FLASH/${input:selectedTarget}.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "preLaunchTask": "Build",
            "device": "${input:selectedDevice}",
            "configFiles": [
                "${input:selectedConfigFile}"
            ],
            "runToEntryPoint": "main"
        }
        // {
        //     "name": "Debug STM32",
        //     "showDevDebugOutput": "both",
        //     "cwd": "${fileWorkspaceFolder}",
        //     "executable": "./BUILD/FLASH/pyboard_v11.elf",
        //     "request": "launch",
