{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "name": "mbed",
    "tasks": [
        {
            "label": "Flash Build",
            "type": "shell",
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/mbed-os"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "args": [
                "compile",
                "-t",
                "GCC_ARM",
                "-m",
                "PYBOARD_V11"
            ],
            "linux": {
                "command": "mbed"
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "clear": true
            }
        },
        {
            "label": "pyOCD Flash",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "args": [
                "flash",
                "--probe",
                "320043001600004a5735534e",
                "${workspaceRoot}/BUILD/PYBOARD_V11/GCC_ARM/${workspaceRootFolderName}.bin"
            ],
            "linux": {
                "command": "pyocd"
            }
        },
        {
            "label": "openOCD Flash",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "args": [
                "-f",
                "${workspaceRoot}/openocd.cfg",
                "-c",
                "program ${workspaceRoot}/BUILD/PYBOARD_V11/GCC_ARM/${workspaceRootFolderName}.bin 0x08000000 verify reset exit"
            ],
            "linux": {
                "command": "openocd"
            }
        },
        {
            "label": "Mbed Debug Build",
            "type": "shell",
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/mbed-os"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "args": ["-j"],
            "linux": {
                "command": "make"
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "clear": true
            }
        }

    ]
}